{
  "name": "nestjs-yoga",
  "version": "1.0.0",
  "description": "",
  "author": "t.kosminov",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node --files -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "nodemon",
    "start:build": "NODE_ENV=development node -r ts-node/register -r tsconfig-paths/register dist/main.js",
    "start:repl": "ts-node --files -r tsconfig-paths/register src/repl.ts",
    "start:build:repl": "NODE_ENV=development node -r ts-node/register -r tsconfig-paths/register dist/repl.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint-fix": "npm run lint -- --fix",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "db:migration:create": "npm run typeorm:cli -- migration:create ./src/database/migrations/created",
    "db:migration:generate": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts migration:generate ./src/database/migrations/generated",
    "db:migration:run": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts migration:run",
    "db:migration:revert": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts migration:revert",
    "db:schema:sync": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts schema:sync",
    "prepare": "husky install"
  },
  "dependencies": {
    "@envelop/core": "^3.0.6",
    "@envelop/response-cache": "^4.0.7",
    "@graphql-tools/delegate": "^9.0.34",
    "@graphql-tools/executor-http": "^0.1.9",
    "@graphql-tools/stitch": "^8.7.48",
    "@graphql-tools/stitching-directives": "^2.3.34",
    "@graphql-tools/utils": "^9.2.1",
    "@graphql-tools/wrap": "^9.4.2",
    "@graphql-yoga/nestjs": "1.1.0",
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.0",
    "@nestjs/graphql": "^11.0.5",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.1",
    "@whatwg-node/fetch": "^0.8.8",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.9",
    "cookie-parser": "^1.4.6",
    "graphql": "^16.6.0",
    "helmet": "^6.1.5",
    "nestjs-graphql-easy": "^3.1.0",
    "node-abort-controller": "^3.1.1",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.0",
    "sofa-api": "^0.16.3",
    "swagger-ui-express": "^4.6.2",
    "typeorm": "^0.3.15",
    "typeorm-extension": "^2.7.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.4.0",
    "@nestjs/schematics": "^9.1.0",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^3.3.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/nodemon": "^1.19.2",
    "@types/pg": "^8.6.6",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.7",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
